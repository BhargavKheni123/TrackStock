<script type="text/javascript">
    function LoadeVMIItemLocationList()
    {
        var SearchValue = "";
        var ItemStatus = 0;
        if ($("#eVMI_filter").val() != null && $("#eVMI_filter").val() != "") {
            SearchValue = $("#eVMI_filter").val();
        }
        if ($("#ddlItemStatus").val() > 0) {
            ItemStatus = $("#ddlItemStatus").val();
        }

        $('#DivLoading').show();
         $.ajax({
             url: 'ItemMastereVMIListAjax',
             data: { 'SearchValue': SearchValue, 'ItemStatus': ItemStatus },
             type: 'Post',
             success: function (data) {
                 $("#diveVMILocationList").html(data);
                 $('#DivLoading').hide();
             },
             error: function (xhr) {
                 $('#DivLoading').hide();
             }
        });
    }
</script>

