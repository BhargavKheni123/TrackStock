        $(document).ready(function () {
            LoadTabs();
            LoadeVMIItemLocationList();
            $(document).on('propertychange input', "#eVMI_filter", function (event) {
                if ('@eTurnsWeb.Helper.SessionHelper.SearchPattern' == "2") {
                    if ($(this).val().length > 2 || $(this).val().length === 0) {
                        LoadeVMIItemLocationList();
                    }
                }
                else {
                    var keycode = (event.keyCode ? event.keyCode : event.which);
                    if (keycode == '13') {
                        LoadeVMIItemLocationList();
                    }
                }
            });
            $("#eVMI_filter").keyup(function (event) {
                if ('@eTurnsWeb.Helper.SessionHelper.SearchPattern' == "2") {
                    if ($(this).val().length > 2 || $(this).val().length === 0) {
                        LoadeVMIItemLocationList();
                    }
                }
                else {
                    var keycode = (event.keyCode ? event.keyCode : event.which);
                    if (keycode == '13') {
                        LoadeVMIItemLocationList();
                    }
                }
            });
            $(document).on("click", "#clear_eVMI_filter", function () { 
                $("#eVMI_filter").val("");
                LoadeVMIItemLocationList();
                return false;
            });
            $("#ddlItemStatus").change(function () {
                LoadeVMIItemLocationList();
            });
        });

    </script>

}
