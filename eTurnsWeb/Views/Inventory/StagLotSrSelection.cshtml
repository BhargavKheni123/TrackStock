@model IList<eTurns.DTO.MaterialStagingPullDetailDTO>

@{
    string viewRight = "ViewOnly";
    //string viewRight = "NoRight";
    //string viewRight = "ViewOnly";

    bool IsAllowOverwriteLotOrSerial = eTurnsWeb.Helper.SessionHelper.GetModulePermission(eTurnsWeb.Helper.SessionHelper.ModuleList.AllowOverwriteLotOrSerial, eTurnsWeb.Helper.SessionHelper.PermissionType.AllowPull);
    bool IsAllowToEnterLotOrSerialInBlankBox = eTurnsWeb.Helper.SessionHelper.GetModulePermission(eTurnsWeb.Helper.SessionHelper.ModuleList.AllowToEnterLotOrSerialInBlankBox, eTurnsWeb.Helper.SessionHelper.PermissionType.AllowPull);
    bool IsViewOnlyLotOrSerial = eTurnsWeb.Helper.SessionHelper.GetModulePermission(eTurnsWeb.Helper.SessionHelper.ModuleList.ViewOnlyLotOrSerial, eTurnsWeb.Helper.SessionHelper.PermissionType.AllowPull);

    if (IsAllowOverwriteLotOrSerial)
    {
        viewRight = "ViewOverwrite";
    }
    else if (IsAllowToEnterLotOrSerialInBlankBox)
    {
        viewRight = "NoRight";
    }
    else if (IsViewOnlyLotOrSerial)
    {
        viewRight = "ViewOnly";
    }
}

@if (Model != null && Model.Count > 0)
{
    <div style="width: 100%; padding-bottom: 10px;">
        <input type="button" class="btnGeneral" value="@ResCommon.AddAll" id="btnPullAllPopUp" name="btnPullAllPopUp" />
        @*<input type="button" class="btnGeneral" value="Validate All" id="btnvalidateAll" name="btnvalidateAll" />*@
    </div>
    foreach (MaterialStagingPullDetailDTO objPullMasterDTO in Model)
    {
        string jsonPullMasterDTO = Newtonsoft.Json.JsonConvert.SerializeObject(objPullMasterDTO);

        <div style="padding: 10px; margin-bottom: 10px; border: 1px solid red;" id="divItem_@(objPullMasterDTO.ItemGUID)">
            <input type="hidden" id="hdnPullIds_@(objPullMasterDTO.ItemGUID)" value="PullIds_@(objPullMasterDTO.ItemGUID)" />
            <table style="width: 100%" class="display" id="tblItemPullheader_@(objPullMasterDTO.ItemGUID)">
                <thead>
                    <tr>
                        <th>
                            <input type="hidden" id="hdnPullMasterDTO_@(objPullMasterDTO.ItemGUID)" value="@jsonPullMasterDTO" name="hdnPullMasterDTO" />
                            @ResItemMaster.ItemNumber
                        </th>
                        <th>
                            @ResItemMaster.TrackingDetails
                        </th>
                        <th>
                            @ResMaterialStagingPullDetail.BinID
                        </th>
                        <th>
                            @ResMaterialStagingPullDetail.StageQuantity
                        </th>
                        <th>
                            @ResMaterialStagingPullDetail.StageBin
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @objPullMasterDTO.ItemNumber
                        </td>
                        <td>
                            @if (objPullMasterDTO.LotNumberTracking)
                            {
                                <text>Lot Number Tracking</text>
                                <input type='hidden' id='hdnTrackingType_@(objPullMasterDTO.ItemGUID)' value='LotNumberTracking' />
                            }
                            else if (objPullMasterDTO.SerialNumberTracking)
                            {
                                <text>Serial Number Tracking</text>
                                <input type='hidden' id='hdnTrackingType_@(objPullMasterDTO.ItemGUID)' value='SerialNumberTracking' />
                            }
                            else if (objPullMasterDTO.DateCodeTracking)
                            {
                                <text>Date Code Tracking</text>
                                <input type='hidden' id='hdnTrackingType_@(objPullMasterDTO.ItemGUID)' value='DateCodeTracking' />
                            }
                            else
                            {
                                <text>No tracking</text>
                                <input type='hidden' id='hdnTrackingType_@(objPullMasterDTO.ItemGUID)' value='NoTracking' />
                            }
                        </td>

                        <td>
                            @objPullMasterDTO.BinNumber
                        </td>
                        <td>
                            <input type='text' value='@objPullMasterDTO.PoolQuantity' id='txtPoolQuantity_@(objPullMasterDTO.ItemGUID)' name='txtPoolQuantity_@(objPullMasterDTO.ItemGUID)' class='text-boxinner pull-quantity' />
                        </td>
                        <td>
                            @objPullMasterDTO.StageBinName
                        </td>
                    </tr>
                </tbody>
            </table>
            <table>
                <tr>
                    <td>
                        &nbsp;
                    </td>
                </tr>
            </table>
            @if (objPullMasterDTO.PoolQuantity > 0)
            {
                string htmltableName = "tblItemPull_" + objPullMasterDTO.ItemGUID.ToString();

                <table style="width: 100%" class="display tbl-item-pull" id="@htmltableName">
                    <thead>
                        <tr>

                            <th style="text-align: left;">
                                @if (objPullMasterDTO.LotNumberTracking)
                                {
                                    @eTurns.DTO.ResItemLocationDetails.LotNumber
                                }
                                else if (objPullMasterDTO.SerialNumberTracking)
                                {
                                    @eTurns.DTO.ResItemLocationDetails.SerialNumber
                                }
                                else
                                {
                                    @eTurns.DTO.ResPullMaster.LotSrnumber
                                }
                            </th>
                            @*<th style="text-align: left;">
                                    @eTurns.DTO.ResPullMaster.BinID
                                </th>*@
                            <th style="text-align: left;">
                                @eTurns.DTO.ResMaterialStagingPullDetail.CustomerOwnedQuantityAvail
                            </th>
                            <th>
                                @eTurns.DTO.ResMaterialStagingPullDetail.StageQuantity
                            </th>
                            <th>
                                @eTurns.DTO.ResItemLocationDetails.ReceivedDate
                            </th>
                            <th>
                                @eTurns.DTO.ResItemLocationDetails.ExpirationDate
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

                <script type="text/javascript">
                    var IsCheckViewRight = true;
                    var objPullItemDTO = {
                        tableID: '@htmltableName',
                        ItemGUID: '@objPullMasterDTO.ItemGUID',
                        BinID: '@objPullMasterDTO.BinID',
                        PullQuantity: '@objPullMasterDTO.PoolQuantity',
                        InventoryConsuptionMethod: '@objPullMasterDTO.InventoryConsuptionMethod',
                        LotNumberTracking: '@objPullMasterDTO.LotNumberTracking',
                        SerialNumberTracking: '@objPullMasterDTO.SerialNumberTracking',
                        DateCodeTracking: '@objPullMasterDTO.DateCodeTracking',
                        ViewRight: '@viewRight',
                    };

                    PrepareStagePullDataTable(objPullItemDTO);

                </script>
            }
            <div style="width: 100%; padding-top: 10px;">
                <input type="button" class="btnGeneral" value="@ResCommon.AddRow" id="btnLoadMoreLots_@(objPullMasterDTO.ItemGUID)" name="btnLoadMoreLots" />
                <input type="button" class="btnGeneral" value="@ResToolMaster.Delete" id="btnDeleteLots_@(objPullMasterDTO.ItemGUID)" name="btnDeleteLots" />
                <input type="button" class="btnGeneral" value="@ResMaterialStaging.AddToStage" id="btnPullPopup_@(objPullMasterDTO.ItemGUID)" name="btnPullPopup" />
                <input type="hidden" name="hdnSelectedId" id="hdnSelectedId_@(objPullMasterDTO.ItemGUID)" />
                <input type="hidden" name="hdnCurrentLoadedIds" id="hdnCurrentLoadedIds_@(objPullMasterDTO.ItemGUID)" />
                <input type="hidden" name="hdnMSGUID" id="hdnMSGUID_@(objPullMasterDTO.ItemGUID)" />
            </div>
        </div>
    }
}
<table style="width: 100%">
    <tr>
        <td>
            &nbsp;
        </td>
    </tr>
    <tr>
        <td style="text-align: right;">
            <input type="button" class="btnGeneral" value="@ResCommon.AddAll" id="btnPullAllPopUp1" name="btnPullAllPopUp" />
            <input type="button" class="btnGeneral" value="@ResCommon.Cancel" id="btnCancel1" name="btnCancelPullPopup" />
        </td>
    </tr>
</table>
<div class="dialog" id="dlgCommonErrorMsgPopup" style="display: none; width: 600px;">
    <div class="inner" style="width: 600px; max-height: 300px; overflow: scroll;">
        <p class="text" id="pErrMessage" style="text-align: left; padding-left: 10px;">
        </p>
        <p id="pOkbtn" class="text" style="text-align: center; padding-left: 10px; display: none;">
            <a href="#" class="no" onclick="closeMessageModalInPopup()">
                <img src="~/Content/images/yes.png" alt="@eTurns.DTO.Resources.ResMessage.InformOk" />@eTurns.DTO.Resources.ResMessage.InformOk
            </a>
        </p>
    </div>
</div>
<script type="text/javascript">

    $(document).ready(function () {

        if ('@viewRight' == "ViewOnly") {
            $("input[type='text'][name^='txtPoolQuantity_']").keypress(function () {
                return false;
            });
        }

    });

    function closeMessageModalInPopup() {
        $.modal.impl.close();
    }






</script>
