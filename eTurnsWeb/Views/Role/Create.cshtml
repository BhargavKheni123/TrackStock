            </fieldset>
        </td>
        <td valign="top">
            <fieldset>
                <legend><b>Replenishing Rooms</b></legend>
                <table>
                    <tr>
                        <td>
                            <b></b>
                        </td>
                        <td>
                            <b>Room</b>
                        </td>
                        <td>
                            <b>Created Date</b>
                        </td>
                        <td>
                            <b>Updated Date</b>
                        </td>
                        <td>
                            <b>User</b>
                        </td>
                    </tr>
                    @if (Model.ReplenishingRooms != null)
                    {
                       foreach (var item in Model.ReplenishingRooms)
                        {     <tr> <td>
                            @Html.CheckBox("chkCheck")
                            </td> <td>
                            @Html.DisplayFor(t => item.RoomName)
                            </td> <td>
                            @item.CreatedDate.ToString("yyyy-MM-dd")
                            </td> <td>
                            @item.UpdatedDate.ToString("yyyy-MM-dd")
                            </td> <td>
                            @Html.DisplayFor(t => item.User)
