@model eTurns.DTO.RoleMasterDTO_BKP
@{
    ViewBag.Title = "Create";
}
<table border="0" bordercolor="red" style="width: 80%">
    <tr>
        <td colspan="1">
            <table>
                <tr>
                    <td style="width: 200px">
                        @Html.Label("Role")
                    </td>
                    <td>
                        @Html.TextBox("Enter Role")
                    </td>
                </tr>
            </table>
        </td>
        <td colspan="1">
            <input id="btnAdd" type="button" value="Add" />
            <br />
            <input id="btnCancel" type="button" value="Cancel" />
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <table>
                <tr>
                    <td style="width: 200px">
                        @Html.Label("Description")
                    </td>
                    <td>
                        @Html.TextArea("Enter Description")
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td valign="top">
            <fieldset>
                <legend><b>Room Access</b></legend>
                <table>
                    <tr>
                        <td>
                            <b></b>
                        </td>
                        <td>
                            <b>Room</b>
                        </td>
                        <td>
                            <b>Created Date</b>
                        </td>
                        <td>
                            <b>Updated Date</b>
                        </td>
                        <td>
                            <b>User</b>
                        </td>
                    </tr>
                    @if (Model.RoomAccess != null)
                    {
                        foreach (var item in Model.RoomAccess)
                        {     <tr>
                            <td>
                                @Html.CheckBox("chkCheck")
                            </td>
                            <td>
                                @Html.DisplayFor(t => item.RoomName)
                            </td>
                            <td>
                                @*     @Html.DisplayFor(t => item.CreatedDate)*@
                                @item.CreatedDate
                            </td>
                            <td>
                                @*@Html.DisplayFor(t => item.UpdatedDate)*@
                                @item.UpdatedDate
                            </td>
                            <td>
                                @Html.DisplayFor(t => item.User)
                            </td>
                        </tr>
                        }
                    }
                    <tr>
                        <td colspan="1">
                            @* <input id="btnAdd" type="button" value="Add" />*@
                            @Html.ActionLink("Add", "Index", "RoomAccess", null, new { @class = "openDialog", data_dialog_id = "EditDialog", data_dialog_title = "Room Access" })
