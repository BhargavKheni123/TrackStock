        try {
            $.datepicker.parseDate(RoomDateJSFormat, $('#ResetRequestDateCFrom').val());
            DateCFromValid = true;
        } catch (e) {
            DateCFromValid = false;
        }

        try {
            $.datepicker.parseDate(RoomDateJSFormat, $('#PullDateCTo').val());
            DateCToValid = true;
        } catch (e) {
            DateCToValid = false;
        }

        if (DateCFromValid && DateCToValid) {
            $("#txtOrderFilter").val('');
            if (!isFromNarrowSearchClear) {
                DoResetRequestNarrowSearch();
            }
        }
        else {
            if (!DateCFromValid)
                $('#ResetRequestDateCFrom').val('');
            if (!DateCToValid)
                $('#PullDateCTo').val('');
        }
    });

