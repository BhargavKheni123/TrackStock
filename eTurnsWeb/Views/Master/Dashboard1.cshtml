        function ShowFirstDashboard() {
            $("#sort1").show();
            $("#sort2").show();
            $("#sort3").hide();
            ChangeImgSRC('Chart', 'imgMainChart', 'imgMainGrid');
        }

        function GenerateFirstDashboard() {
            $("#sort1").show();
            $("#sort2").show();
            $("#sort3").hide();



            $('a.closeEl').bind('click', toggleContent);
            $('a.closeEl2').bind('click', toggleContent2);
            $.ajax({
                type: "POST",
                url: "/Master/GenerateDashBoard",
                data: "{'RoomID': '1' }",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (widget) {
                    $("#divs1").html(widget.LeftWidget);
                    $("#divs2").html(widget.RightWidget);
                    BindFirstDashboardEvents();
                },
                error: function (response) {
                    // through errror message
                }
            });

