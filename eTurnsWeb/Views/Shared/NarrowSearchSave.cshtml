@model CommonDTO
@{
    string version = eTurnsWeb.Helper.CommonUtility.GetReleaseNumber();
}

@if (Model.ListName == "ItemMaster" || Model.ListName == "ItemBinMaster" || Model.ListName == "ItemMasterPictureView"
    || Model.ListName == "NewPULL" || Model.ListName == "PullMaster" || Model.PageName == "OrderMaster" || Model.PageName == "RequisitionMaster"
    //|| Model.ListName == "ReceiveMaster" || Model.ListName == "ReceiveItemWithoutOrder"
    || Model.PageName == "InventoryCountList"
    //|| Model.PageName == "ToolMaster" || Model.PageName == "ToolHistory" || Model.PageName == "ToolHistoryNew" || Model.PageName == "WrittenOffToolList" || Model.PageName == "ToolMasterNew"
    || Model.PageName == "AssetMaster")
{
    string btnSaveID = "NarroSearchSave" + Model.ListName;

    <input id="@btnSaveID" type="button" value="@ResNarrowSearch.Save" class="ClearBtn" data-id="0" onclick="_NarrowSearchSave.saveNarrowSearch('@btnSaveID','@Model.ListName')" />

    <script type="text/javascript">
     _NarrowSearchSave.currentBtnSaveID = '@btnSaveID';
     _NarrowSearchSave.currentListName = '@Model.ListName';
        ReceiveIncomplateTab = window.location.hash.toLowerCase() == "#incomplete";
        var ReqApproved = window.location.hash.toLowerCase() == "#approved";
        var ReqSubmitted = window.location.hash.toLowerCase() == "#submitted";
        var ReqUnsubmitted = window.location.href.indexOf("Consume") != -1 && window.location.hash.toLowerCase() == "#unsubmitted";
        var ReqClosed = window.location.hash.toLowerCase() == "#closed";
        var CurrentPageName = '@Model.PageName';
        if (ReceiveIncomplateTab) {
            _NarrowSearchSave.currentListName = "ReceiveMasterIncomplete";
        }
        if (ReqApproved) {
            _NarrowSearchSave.currentListName = "RequisitionMasterApproved";
        }
        if (ReqSubmitted) {
            _NarrowSearchSave.currentListName = "RequisitionMasterSubmitted";
        }
        if (ReqUnsubmitted) {
            _NarrowSearchSave.currentListName = "RequisitionMasterUnsubmitted";
        }
        if (ReqClosed) {
            _NarrowSearchSave.currentListName = "RequisitionMasterClosed";
        }
    _NarrowSearchSave.init(
        @eTurnsWeb.Helper.SessionHelper.CompanyID
       ,@eTurnsWeb.Helper.SessionHelper.RoomID
       ,@eTurnsWeb.Helper.SessionHelper.EnterPriceID);

    _NarrowSearchSave.loadNarrowSearch();

    $(window).on("load", function () {
        _NarrowSearchSave.setStaticControlValues();
    });

    </script>
}