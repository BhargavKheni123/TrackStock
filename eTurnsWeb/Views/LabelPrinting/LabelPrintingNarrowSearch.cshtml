<script type="text/javascript">

    var LabelOnlyBaseSelectedValues = '';
    var LabelModuleSelectedValues = '';
    var CreatedBySelectedValues = '';
    var UpdatedBySelectedValues = '';

    $(document).ready(function () {
        $('#LPDateCFrom').blur(function () {
        }).datepicker({
            changeMonth: true,
            changeYear: true, dateFormat: RoomDateJSFormat
        });

        $('#LPDateCTo').blur(function () {
        }).datepicker({
            changeMonth: true,
            changeYear: true, dateFormat: RoomDateJSFormat
        });
        $('#LPDateUFrom').blur(function () {
        }).datepicker({
            changeMonth: true,
            changeYear: true, dateFormat: RoomDateJSFormat
        });
        $('#LPDateUTo').blur(function () {
        }).datepicker({
            changeMonth: true,
            changeYear: true, dateFormat: RoomDateJSFormat
        });

        $('a.downarrow').click(function (e) {
            e.preventDefault();
            $(this).closest('.accordion').find('.dropcontent').slideToggle();
        });

        var NarrowSearchState = getCookie('NarrowSearchState');
        if (NarrowSearchState == 'Expanded') {
            CollapseLPNarrowSearch();
        }
        else {
            ExpandLPNarrowSearch();
        }

        $('.IteamBlock').css('width', '99.5%');

        FillNarrowSearchData();
    });


    $('#LPDateCFrom,#LPDateCTo').off('change').on('change', function (e) {
        var DateCFromValid = true;//isDate($('#LPDateCFrom').val());
        var DateCToValid = true;//isDate($('#LPDateCTo').val());
        try {
            $.datepicker.parseDate(RoomDateJSFormat, $('#LPDateCFrom').val());
            DateCFromValid = true;
        } catch (e) {
            DateCFromValid = false;
        }

        try {
            $.datepicker.parseDate(RoomDateJSFormat, $('#LPDateCTo').val());
            DateCToValid = true;
        } catch (e) {
            DateCToValid = false;
        }

        if (DateCFromValid && DateCToValid) {
            //$("#txtLPFilter").val('');
            DoLPNarrowSearch();
        }
        else {
            if (!DateCFromValid)
                $('#LPDateCFrom').val('');
            if (!DateCToValid)
                $('#LPDateCTo').val('');
        }
    });

    $('#LPDateUFrom,#LPDateUTo').off('change').on('change', function (e) {
        var DateUFromValid = true;//isDate($('#LPDateUFrom').val());
        var DateUToValid = true;//isDate($('#LPDateUTo').val());

        try {
            $.datepicker.parseDate(RoomDateJSFormat, $('#LPDateUFrom').val());
            DateUFromValid = true;
        } catch (e) {
            DateUFromValid = false;
        }

        try {
            $.datepicker.parseDate(RoomDateJSFormat, $('#LPDateUTo').val());
            DateUToValid = true;
        } catch (e) {
            DateUToValid = false;
        }
        if (DateUFromValid && DateUToValid) {
            //$("#txtLPFilter").val('');
            DoLPNarrowSearch();
        }
        else {
            if (!DateUFromValid)
                $('#LPDateUFrom').val('');
            if (!DateUToValid)
                $('#LPDateUTo').val('');
        }
    });

