<div id="divRequisitionLineItemHistory">
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#divRequisitionLineItemHistory").dialog({
            autoOpen: false,
            modal: true,
            draggable: true,
            resizable: true,
            width: '95%',
            height: 720,
            title: '@eTurns.DTO.Resources.ResCommon.Requisition  @eTurns.DTO.Resources.ResCommon.History',
            open: function () {
                $('#DivLoading').show();
                $("#divRequisitionLineItemHistory").empty();
                $.get('RequisitionHistoryView', { ID: $(this).data("cid") }, function (data) {
                    $("#divRequisitionLineItemHistory").html(data);
                });
            },
            close: function () {
                $("#divRequisitionLineItemHistory").empty();
            }
        });


    });

    function openHistoryModel(id) {
        $('#divRequisitionLineItemHistory').data("cid", id).dialog('open')
        return false;
    }
</script>
