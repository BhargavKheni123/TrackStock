@model IEnumerable<eTurns.DTO.DashboardDTO>
@using eTurns.DTO
@using eTurns.DTO.Resources
@{
    ViewBag.Title = ResDashboard.PageTitle;
    //var settings = new GridHeaderSettings() { dataViewType = DataViewType.None, DisplayUDFButton = true, DisplayColumnSetupButton = true, ColumnSetupFor = "RoleList" };
    var modelCommon = new eTurns.DTO.CommonDTO { PageName = "Dashboard" };
}
@section head{
    <script language="javascript" type="text/javascript">
        var AllowDeletePopup = true;
        $(document).ready(function () {
            $('a.closeEl').bind('click', toggleContent);
            $.ajax({
                type: "POST",
                url: "/EturnsMaster/GenerateDashBoard",
                data: "{'RoomID': '1' }",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (widget) {
                    //alert(widget.LeftWidget);
                    $("#divs1").html(widget.LeftWidget);
                    $("#divs2").html(widget.RightWidget);
                    GenerateDashboard();
                },
                error: function (response) {
                    // through errror message
                }
            });

            //            // Change the image of hoverable images
            //            $(".imgHoverable").hover(function () {
            //                var hoverImg = HoverImgOf($(this).attr("src"));
            //                $(this).attr("src", hoverImg);
            //            },
            //            function () {
            //                var normalImg = NormalImgOf($(this).attr("src"));
            //                $(this).attr("src", normalImg);
            //            });

        });

        var toggleContent = function (e) {
            var targetContent = $('div.portlet-content', this.parentNode.parentNode);
            if (targetContent.css('display') == 'none') {
                targetContent.slideDown(300);
                $(this).removeClass('ui-icon-triangle-1-s').addClass('ui-icon-triangle-1-n');
            } else {
                targetContent.slideUp(300);
                $(this).removeClass('ui-icon-triangle-1-n').addClass('ui-icon-triangle-1-s');

            }
            return false;
        };

        function GenerateDashboard() {
            $('a.closeEl').bind('click', toggleContent);
            $('div.column').Sortable(
			{
			    accept: 'portlet',
			    helperclass: 'sortHelper',
			    opacity: 0.5,
			    activeclass: 'sortableactive',
			    hoverclass: 'sortablehover',
			    handle: 'div.portlet-header',
			    tolerance: 'pointer',
			    onChange: function (ser) {
			    },
			    onStart: function () {
			        $.iAutoscroller.start(this, document.getElementsByTagName('body'));
			    },
			    onStop: function () {
			        $.iAutoscroller.stop();
			        var widgetorder = "saveorder=1&" + serialize();
			        $.ajax({
			            url: "/EturnsMaster/SaveWidgetOrder?" + widgetorder,
			            //url: "/EturnsMaster/SaveWidgetOrder?",
			            success: function () { },
			            error: function (XMLHttpRequest, textStatus, errorThrown) {
			                alert(textStatus);
			            }
			        });
			    }
			});
            // Change the image of hoverable images
            $(".imgHoverable").hover(function () {
                var hoverImg = HoverImgOf($(this).attr("src"));
                $(this).attr("src", hoverImg);
            },
            function () {
                var normalImg = NormalImgOf($(this).attr("src"));
                $(this).attr("src", normalImg);
            });

            if ($("#hdnCategory").length) {
                var arry = new Array();
                arry = $('#hdnCategory').val().split(',');
                var range_map = $.range_map(arry);

                var colorarry = new Array();
                colorarry = $('#hdnCategoryColor').val().split(',');
               
                $('#spCategoryCost').sparkline('html', { type: 'pie', height: '200', borderWidth: '1', borderColor: '#F0F0F0F0', enableTagOptions: true, tooltipValueLookups: { piemap: range_map }, sliceColors: colorarry });

            }



        }
        function serialize(s) {
            serial = $.SortSerialize(s);
            return serial.hash.toString();
        };

        function HoverImgOf(filename) {
            var re = new RegExp("(.+)\\.(gif|png|jpg)", "g");
            return filename.replace(re, "$1-hover.$2");
        }
        function NormalImgOf(filename) {
            var re = new RegExp("(.+)-hover\\.(gif|png|jpg)", "g");
            return filename.replace(re, "$1.$2");
        }
        function get_random_color() {
            var letters = '0123456789ABCDEF'.split('');
            var color = '#';
            for (var i = 0; i < 6; i++) {
                color += letters[Math.round(Math.random() * 15)];
            }
            return color;
        }
    </script>
    <script src="@Url.Content("~/Scripts/Dashboard/jquery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Dashboard/interface.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Dashboard/jquery.sparkline.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/Dashboard/blue.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Dashboard/jquery.ui.theme.css")" rel="stylesheet" type="text/css" />
}
<div class="dashboardWrapper">
    <h2>
        @ResDashboard.PageHeader</h2>
    <div id="portlets">
        <div style="-moz-user-select: none; margin-right: 30px; min-height: 200px" class="column"
            id="sort1">
            <div runat="Server" id="divs1">
            </div>
        </div>
        <div style="-moz-user-select: none; min-height: 200px" id="sort2" class="column">
            <div runat="Server" id="divs2">
            </div>
        </div>
    </div>
</div>
