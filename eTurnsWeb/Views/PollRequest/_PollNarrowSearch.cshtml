    $('#PollDateCFrom,#PullDateCTo').change(function () {
        var DateCFromValid = true;//Date.isValid($('#PollDateCFrom').val(),format);
        var DateCToValid = true;//Date.isValid($('#PullDateCTo').val(),format);

        try {
            $.datepicker.parseDate(RoomDateJSFormat, $('#PollDateCFrom').val());
            DateCFromValid = true;
        } catch (e) {
            DateCFromValid = false;
        }

        try {
            $.datepicker.parseDate(RoomDateJSFormat, $('#PullDateCTo').val());
            DateCToValid = true;
        } catch (e) {
            DateCToValid = false;
        }

        if (DateCFromValid && DateCToValid) {
            $("#txtOrderFilter").val('');
            if (!isFromNarrowSearchClear) {
                DoPollNarrowSearch();
            }
        }
        else {
            if (!DateCFromValid)
                $('#PollDateCFrom').val('');
            if (!DateCToValid)
                $('#PullDateCTo').val('');
        }
    });

