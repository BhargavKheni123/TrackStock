<script type="text/javascript">
    jQuery(function () {
        oTable.fnDraw();
        $("#EnterpriceList").dialog({
            autoOpen: false,
            modal: true,
            draggable: false,
            resizable: false,
            width: '90%',
            height: 710,
            title: 'Run scripts on Enterprose database',
            open: function () {
                var URLForPopup = '@Url.Action("EnterpriseList", "EnterpriseAdmin")/' + $("#EnterpriceList").data().SQLScriptID;

                $("#EnterpriceList").load(URLForPopup, function () {
                    $('#DivLoading').hide();
                });
                $('#DivLoading').hide();
            },
            close: function () {
                $("#EnterpriceList").html("");
            }
        });
    });

    function OpenEnterpricePopup(curobj) {
        
        var aPos = oTable.fnGetPosition($(curobj).parent()[0]);
        var aData = oTable.fnGetData(aPos[0]);
        $("#EnterpriceList").data(aData).dialog("open");
        //        ShowHideEPL();
    }
    function ShowHideEPL() {
        $("#tab7").show();
    }
</script>
