@using eTurns.DTO
@using eTurns.DTO.Resources
@{    
    Layout = "~/Views/Shared/_PopupMaster.cshtml";
    var settings = new GridHeaderSettings() { dataViewType = DataViewType.None, DisplayDeleteButton = false, DataTableName = "HistoryTable", ColumnSetupFor = "QuickListChangeLog" };
}
<div class="searchWrapper">
    <div class="searchBlock">
        <span class="label">@eTurns.DTO.Resources.ResCommon.Search </span>
        <div class="searchinputB">
            <input type="text" class="searchinput" id="HistoryText" />
            <a href="javascript:void(0);" class="xclose">
                <img src="~/Content/images/x.png" alt="X" id="HistoryClear" /></a>
        </div>
    </div>
</div>
@Html.GridTopHeaderForHistory(settings)
<div class="userContent" style="margin: 0 0.4% 1%; width: 99%">
    <table id="HistoryTable" class="display">
        <thead>
            <tr>
                @*<th>
                    @eTurns.DTO.Resources.ResCommon.ID
                </th>
                <th>
                    @eTurns.DTO.Resources.ResCommon.HistoryID
                </th>*@
                <th>
                    @eTurns.DTO.Resources.ResCommon.HistoryAction
                </th>
                <th>
                    @eTurns.DTO.ResQuickList.Name
                </th>
                <th>
                    From Where
                </th>
                <th>
                    @eTurns.DTO.ResQuickList.Comment
                </th>
                <th>
                    @eTurns.DTO.ResQuickList.ListType
                </th>
                <th>
                    @eTurns.DTO.ResQuickList.NoOfItems
                </th>
                <th>
                    @eTurns.DTO.Resources.ResCommon.RoomName
                </th>
                <th>
                    @eTurns.DTO.Resources.ResCommon.AddedFrom
                </th>
                <th>
                    @eTurns.DTO.Resources.ResCommon.EditedFrom
                </th>
                <th>
                    @eTurns.DTO.Resources.ResCommon.ReceivedOnDate
                </th>
                <th>
                    @eTurns.DTO.Resources.ResCommon.ReceivedOnWebDate
                </th>
                <th>
                    @eTurns.DTO.Resources.ResCommon.UpdatedBy
                </th>
                <th>
                    @eTurns.DTO.Resources.ResCommon.CreatedBy
                </th>
                <th>
                    @eTurns.DTO.Resources.ResCommon.CreatedOn
                </th>
                <th>
                    @eTurns.DTO.Resources.ResCommon.UpdatedOn
                </th>
                @Html.RenderColumnsHeader("QuickListMaster", typeof(eTurns.DTO.ResQuickList))
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
<div id="divQuickListLineItemHistory">
</div>
<script language="javascript" type="text/javascript">
    var oHistoryTable;
    var AllowDeletePopup = false;
    var historyDTName = 'HistoryTable';

    $(document).ready(function () {
        oHistoryTable = $('#HistoryTable').dataTable({
            "bJQueryUI": true,
            "bScrollCollapse": true,
            "bAutoWidth": true,                        
            "sDom": 'R<"top"lp<"clear">>rt<"bottom"i<"clear">>T',
            "oColVis": {},
            "sScrollX": "100%",
            "aaSorting": [[1, "asc"]],
            "oColReorder": {},
            "bSort": false,
            "sPaginationType": "full_numbers",
            "sAjaxSource": '@Url.Content("~/Master/GetHistoryDataGUID")',
            "fnServerData": function (sSource, aoData, fnCallback, oSettings) {
                aoData.push({ "name": "PageType", "value": "QuickList" });                 
                aoData.push({ "name": "PageID", "value": SelectedHistoryRecordID });
                oSettings.jqXHR = $.ajax({
                    "dataType": 'json',
                    "type": "POST",
                    "url": sSource,
                    "data": aoData,
					"headers": { "__RequestVerificationToken": $("input[name='__RequestVerificationToken'][type='hidden']").val() },
                    "success": fnCallback
                })
            },
            "oLanguage": {
                "sLengthMenu": MsgShowRecordsGridBtn,
                "sEmptyTable": MsgNoDataAvailableInTable,
                "sInfo": MsgShowingNoOfEntries,
                "sInfoEmpty": MsgShowingZeroEntries,
                "sZeroRecords": MsgNoDataAvailableInTable,
                "sInfoFiltered":""
            },
            "fnInitComplete": function () {                     
                     compareHistoryRows(this);
            },
            "aoColumns": [                            
                            //{ "mDataProp": "ID", "sClass": "read_only" },    
                            //{ "mDataProp": "HistoryID", "sClass": "read_only" },
                            { "mDataProp": "Action", "sClass": "read_only" },
			                {
			                    "mDataProp": "Name",
			                    "sClass": "read_only",
			                    "sDefaultContent": ''	
                                ,"fnRender": function (obj, val) {
                                   return "<a onclick='return openModel(" + obj.aData.HistoryID + ")' href='JavaScript:void(0);'>" + obj.aData.Name+ "</a>";
                                 }	                    
			                },
                             { "mDataProp": "WhatWhereAction", "sClass": "read_only" },
                            { "mDataProp": "Comment" },
                            { "mDataProp": "Type", "sClass": "read_only" 
                                            ,"fnRender": function (obj, val) {
                                                if( obj.aData.Type=='@Convert.ToString((int)eTurns.DTO.QuickListType.General)')
			                                        return '@eTurns.DTO.QuickListType.General.ToString()';
                                                else if(obj.aData.Type=='@Convert.ToString((int)eTurns.DTO.QuickListType.Asset)')
                                                    return '@eTurns.DTO.QuickListType.Asset.ToString()';
                                                else
                                                    return "";
                                        }
                             },
                            { "mDataProp": "NoOfItems", "sClass": "read_only" },
			                { "mDataProp": "RoomName", "sClass": "read_only" },
                            { "mDataProp": "AddedFrom", "sClass": "read_only" },
                            { "mDataProp": "EditedFrom", "sClass": "read_only" },
			                { "mDataProp": "ReceivedOnWeb", "sClass": "read_only", "fnRender": function (obj, val) { return obj.aData.ReceivedOnDateWeb; } },
			                { "mDataProp": "ReceivedOn", "sClass": "read_only", "fnRender": function (obj, val) { return obj.aData.ReceivedOnDate; } },
                            { "mDataProp": "UpdatedByName", "sClass": "read_only" },
                            { "mDataProp": "CreatedByName", "sClass": "read_only" },
                            { "mDataProp": "Created", "sClass": "read_only", "fnRender": function (obj, val) { return obj.aData.CreatedDate; } },
			                { "mDataProp": "LastUpdated", "sClass": "read_only", "fnRender": function (obj, val) { return obj.aData.UpdatedDate; } },
                            @Html.RenderColumnsArray("QuickListMaster")

		    ]
        });
        //HIDE PRINT CONTAINER
        $('.DTTT_container').css('z-index', '-1');
        _Common.setGloblaSearch('HistoryText', 'HistoryTable');
        
        $("#HistoryText").keyup(function (e) {
            var code = (e.keyCode ? e.keyCode : e.which);
            if (code == 13) {
            }
            else {
                fnFilterQuickListHistory();
            }
        });

        //Keydown event is required to handle ENTER KEY to work in IE
        $("#HistoryText").keydown(function (e) {
            var code = (e.keyCode ? e.keyCode : e.which);
            if (code == 13) {
                fnFilterQuickListHistory();
            }
        });

        //Clear Filter
        $("#HistoryClear").click(function () {
            $("#HistoryText").val('');
            fnFilterQuickListHistory();
            $("#HistoryText").focus();
            return false;
        });

        var timeoutscheduler;
        $(document).on('propertychange input', "#HistoryText", function () {
            clearTimeout(timeoutscheduler);
            timeoutscheduler = setTimeout(function () {
                if (SearchPattern == 2 || SearchPattern == "2") {
                    fnFilterQuickListHistory();
                }
                else {
                    $('#HistoryText').unbind("keypress");
                    $('#HistoryText').keypress(function (event) {
                        var keycode = (event.keyCode ? event.keyCode : event.which);
                        if (keycode == 13) {
                            fnFilterQuickListHistory();
                        }
                    });
                    if ($("#HistoryText").val().length == 0) {
                        setTimeout(function () { fnFilterQuickListHistory(); }, 200);
                    }
                }
            }, 500);
        });
    }); 

    function fnFilterQuickListHistory() {
        //set filter only if more than 2 characters are pressed
        //if (typeof $("#HistoryText") != 'undefined' && ($("#HistoryText").val().length > 2 || $("#HistoryText").val().length == 0)) {
        if (typeof $("#HistoryText") != 'undefined') {
            var searchtext = $("#HistoryText").val().replace(/'/g, "''");

            $('#' + historyDTName + ' td').removeHighlight();

            $('#' + historyDTName).dataTable().fnFilter(
                searchtext,
                null,
                null,
                null
            );

            if (searchtext.length > 0)
                $('#' + historyDTName + ' td').highlight($("#HistoryText").val());
        }
    }
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#divQuickListLineItemHistory").dialog({
            autoOpen: false,
            modal: true,
            draggable: true,
            resizable: true,
            width: '82%',
            height: 710,
            title: 'Quick List History',
            open: function () {
                $('#DivLoading').show();
                $("#divQuickListLineItemHistory").empty();
                $('#divQuickListItemsHistory').empty();
                $.get('@Url.Action("../QuickList/QuickListHistoryView")' + '/' + $(this).data("cid"), function (data) {
                    $("#divQuickListLineItemHistory").html(data);
                });
            },
            close: function () {
                $("#divQuickListLineItemHistory").empty();
                $("#divQuickListLineItemHistory").html('');
                //oHistoryTable.fnDraw();
            }
        });


    });

    function openModel(id) {
        $('#divQuickListLineItemHistory').data("cid", id).dialog('open')
        return false;
    }
</script>
