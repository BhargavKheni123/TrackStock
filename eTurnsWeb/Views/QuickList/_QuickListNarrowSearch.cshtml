        }

        if ($('#QLDateUFrom').val() != '' && $('#QLDateUTo').val() != '') {
            narrowSearchValues += ($('#QLDateUFrom').val()) + "," + ($('#QLDateUTo').val()) + "~";
        }
        else {
            narrowSearchValues += "~";
        }

        narrowSearchValues += QLUDF1NarrowValues + "~";
        narrowSearchValues += QLUDF2NarrowValues + "~";
        narrowSearchValues += QLUDF3NarrowValues + "~";
        narrowSearchValues += QLUDF4NarrowValues + "~";
        narrowSearchValues += QLUDF5NarrowValues;

      //  if (narrowSearchValues.replace(/~/g, '') == '') {
      //      narrowSearch = '';
     //   }
     //   else {
            var searchtext = $("#global_filter").val().replace(/'/g, "''");
            narrowSearch = "[###]" + narrowSearchValues + "[###]" + searchtext;
     //   }

        //fnFilterOrderList(narrowSearch);
        $('#myDataTable').dataTable().fnFilter(narrowSearch, null, null, null)
    }


     

