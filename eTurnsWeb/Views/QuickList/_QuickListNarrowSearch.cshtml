<script type="text/javascript">

    var CreatedBySelectedValues = '';
    var UpdatedBySelectedValues = '';
    var QLUDF1NarrowValues = ''
    var QLUDF2NarrowValues = ''
    var QLUDF3NarrowValues = ''
    var QLUDF4NarrowValues = ''
    var QLUDF5NarrowValues = ''
    //var isFromQLNarrowSearchClear = false;
    $(document).ready(function () {
      
     
        $('#QLDateCFrom').blur(function () {
        }).datepicker({
            dateFormat: RoomDateJSFormat, changeMonth: true,
            changeYear: true
        });
        $('#QLDateCTo').blur(function () {
        }).datepicker({
            changeMonth: true,
            changeYear: true, dateFormat: RoomDateJSFormat
        });
        $('#QLDateUFrom').blur(function () {
        }).datepicker({
            changeMonth: true,
            changeYear: true, dateFormat: RoomDateJSFormat
        });
        $('#QLDateUTo').blur(function () {
        }).datepicker({
            changeMonth: true,
            changeYear: true, dateFormat: RoomDateJSFormat
        });

        $('a.downarrow').click(function (e) {
            e.preventDefault();
            $(this).closest('.accordion').find('.dropcontent').slideToggle();
        });

        var NarrowSearchState = getCookie('NarrowSearchState');
        if (NarrowSearchState == 'Expanded') {
            CollapseQLNarrowSearch();
        }
        else {
            ExpandOrderNarrowSearch();
        }

        $('.IteamBlock').css('width', '99.5%');

        FillNarrowSearchData()

    });


    $('#QLDateCFrom,#QLDateCTo').change(function () {
        var DateCFromValid = true;//Date.isValid($('#QLDateCFrom').val(),format);
        var DateCToValid = true;//Date.isValid($('#QLDateCTo').val(),format);

        try {
            $.datepicker.parseDate(RoomDateJSFormat, $('#QLDateCFrom').val());
            DateCFromValid = true;
        } catch (e) {
            DateCFromValid = false;
        }

        try {
            $.datepicker.parseDate(RoomDateJSFormat, $('#QLDateCTo').val());
            DateCToValid = true;
        } catch (e) {
            DateCToValid = false;
        }

        if (DateCFromValid && DateCToValid) {
            $("#txtOrderFilter").val('');
            if (!isFromNarrowSearchClear) {
                DoQLNarrowSearch();
            }            
        }
        else {
            if (!DateCFromValid)
                $('#QLDateCFrom').val('');
            if (!DateCToValid)
                $('#QLDateCTo').val('');
        }
    });

    $('#QLDateUFrom,#QLDateUTo').change(function () {
       

