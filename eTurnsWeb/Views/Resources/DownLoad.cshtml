@model IEnumerable<eTurns.DTO.TechnicianMasterDTO>
@{
    ViewBag.Title = "eTurns: Show and Edit Reources file";
    var settings = new GridHeaderSettings() { dataViewType = DataViewType.None, DisplayUDFButton = true };
}
<div class="userListingWrapper">
    <h2>
        Resource Editor
    </h2>
    <div class="fieldIcon">
    </div>
    <div class="userListBlock">
        <ul class='tabs'>
            <li class="tab1"><a id="atab1" href='#tab1'></a></li>
            <li class="tab7"><a id="atab7" class="active" href='#tab7'></a></li>
        </ul>
        <div id="tab7" class="tabContener">
            @using (Html.BeginForm("Download", "Resources", FormMethod.Post, new { @id = "frmDownLoad" }))
            {
                @Html.AntiForgeryToken()
                <div class="userContent">
                    <div class="userHead">
                        <div class="editorForm" style="width: 98%">
                            <ul>
                                <li style="float: left;">
                                    <div class="editor-label" style="width: 10%; float: left;">
                                        @Html.Label("Language")
                                    </div>
                                    <div class="editor-field" style="width: 10%; float: left;">
                                        @Html.DropDownList("ddlResEditorLanguage", (List<SelectListItem>)ViewBag.DDLanguage, new { @style = "width:98%" })
                                    </div>
                                    <div class="editor-label" style="width: 10%; float: left;">
                                        @Html.Label("Select File")
                                    </div>
                                    <div class="editor-field" style="width: 20%; float: left;">
                                        @Html.DropDownList("ddlResourceFile", (List<SelectListItem>)ViewBag.DDLResourceFile, new { @style = "width:98%" })
                                    </div>
                                    <div class="editor-label" style="width: 1%; float: left;">
                                        &nbsp;
                                    </div>
                                    <div class="editor-field" style="width: 10%; float: left;">
                                        <input type="button" value="Load" id="btnDownload" name="btnDownload" />
                                    </div>
                                    <div class="editor-label" style="width: 45%; float: left;">
                                        &nbsp;
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
            @*<div class="vertBlueBg">&nbsp;</div>*@
            <div class="searchWrapper">
                <div class="searchBlock">
                    <span class="label">@eTurns.DTO.ResTechnician.Search </span>
                    <div class="searchinputB">
                        <input type="text" class="searchinput" id="global_filter" />
                        <a href="javascript:void(0);" class="xclose">
                            <img src="~/Content/images/x.png" alt="X" id="clear_global_filter" /></a>
                    </div>
                    @*<input type="button" value="Search" class="searchBtn" />*@
                </div>
            </div>
            <div class="userContent" style="width: 99.5%;">
                <table id="myDataTable" class="display">
                    <thead>
                        <tr>
                            <th style="width: 30%">
                                key
                            </th>
                            <th style="width: 69.5%">
                                value
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <div id="processing_message" style="display: none" title="Processing">
                    Please wait while your request is being processed...</div>
            </div>
            <div class="userHead" id="divbtnBlock" style="display: none;">
                <ul>
                    <li>
                        <div class="editor-label">
                            &nbsp;
                        </div>
                        <div class="BtnBlockform" style="text-align: center; width: 99.5%;">
                            <input type="button" value="@ResCommon.Save" id="btnSave" name="btnSave" />&nbsp;&nbsp;
                            <input type="button" value="@ResCommon.Cancel" id="btnCancel" name="btnCancel" />
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div id='tab1' class="tabContener">
            <input type='text' id='txt1' style='width: 99%' value="" />
        </div>
    </div>
</div>
<script language="javascript" type="text/javascript">
    var oTable;
    var IsRefreshGrid = false;
    var PostCount = 0;
    var AllowDeletePopup = false;

    $("#btnDownload").click(function () {
        if (oTable != null)
            oTable.fnDestroy();

        var gaiSelected = [];
        oTable = $('#myDataTable').dataTable({
            "bJQueryUI": true,
            "sDom": 'rt',
            "bProcessing": false,
            "bStateSave": false,
            "fnStateLoad": function (oSettings) {
                var o;
                $.ajax({
                    "url": '@Url.Content("~/Resources/LoadGridState")',
                    "type": "POST",
                    data: { ListName: 'Resource' },
                    "async": false,
                    "dataType": "json",
                    "success": function (json) {
                        o = JSON.parse(json.jsonData);

                    }
                });
                return o;
            },
            "bServerSide": true,
            "sAjaxSource": '@Url.Content("~/Resources/GetResourceList")',
            "fnServerData": function (sSource, aoData, fnCallback, oSettings) {

                PostCount = PostCount + 1;
                var arrCols = new Array();
                var objCols = this.fnSettings().aoColumns;
                for (var i = 0; i <= objCols.length - 1; i++) {
                    arrCols.push(objCols[i].mDataProp);
                }
                for (var j = 0; j <= aoData.length - 1; j++) {
                    if (aoData[j].name == "sColumns") {
                        aoData[j].value = arrCols.join("|");
                        break;
                    }
                }
                if (oSettings.aaSorting.length != 0)
                    aoData.push({ "name": "SortingField", "value": oSettings.aaSorting[0][3] });
                else
                    aoData.push({ "name": "SortingField", "value": "0" });

                aoData.push({ "name": "resourcefile", "value": $("#ddlResourceFile").val() });
                aoData.push({ "name": "resourcelang", "value": $("#ddlResEditorLanguage").val() });

                oSettings.jqXHR = $.ajax({
                    "dataType": 'json',
                    "type": "POST",
                    "url": sSource,
                    "data": aoData,
					"headers": { "__RequestVerificationToken": $("input[name='__RequestVerificationToken'][type='hidden']").val() },
                    "success": fnCallback,
                    beforeSend: function () {
                        $('#myDataTable').removeHighlight();
                        $('.dataTables_scroll').css({ "opacity": 0.2 });
                    },
                    complete: function () {
                        $('.dataTables_scroll').css({ "opacity": 1 });
                        if ($("#global_filter").val() != '') {
                            $('#myDataTable').highlight($("#global_filter").val());
                        }
                        if ($('#myDataTable tbody tr').length > 0)
                            $('#divbtnBlock').attr("style", "display:inline");
                    }
                })
            },
            "aoColumns": [{ "mDataProp": "key", "sClass": "read_only" },
			                {
			                    "mDataProp": "value",
			                    "sDefaultContent": '',
			                    "bSortable": false,
			                    "bSearchable": false
			                }]
        }).makeEditable({
            //sUpdateURL: '@Url.Content("~/Resources/UpdateDataResource")'
            fnShowError: ShowEditError,
            sUpdateURL: function (value, settings) {
                $.ajax({ url: '@Url.Content("~/Resources/MyUpdateDataResource")'
                        , type: 'GET'
                        , data: { 'changedKey': this.parentNode.children[0].innerHTML, 'changedValue': value, 'Lang': $("#ddlResEditorLanguage").val(), 'ResFile': $("#ddlResourceFile").val() }
                        , success: function (result) {
                            //return alert(result);
                        }
                });
            }
        });
    });
    function ShowEditError(errorText, action) {

    }

    $('#ddlResourceFile').change(function () {
        var selectedVal = $('#ddlResourceFile option:selected').attr('value');
        ClearResourceSession();

    });

    $('#ddlResEditorLanguage').change(function () {
        var selectedVal = $('#ddlResEditorLanguage option:selected').attr('value');
        ClearResourceSession();

    });

    function ClearResourceSession() {
        $.ajax({ url: '@Url.Content("~/Resources/ClearCurrentResourceList")'
                        , type: 'GET'
                        , success: function (result) {

                        }
        });
    }

    $('#btnSave').click(function () {
        $.ajax({ url: '@Url.Content("~/Resources/SaveResources")'
                        , type: 'POST'
                        , data: { 'SelectedResourceFile': $("#ddlResourceFile").val(), 'SelectedCulter': $("#ddlResEditorLanguage").val() }
                        , success: function (response) {
                            showNotificationDialog();
                            $("#spanGlobalMessage").html(response.Message);
                            $("#spanGlobalMessage").removeClass('errorIcon WarningIcon').addClass('succesIcon');
                            $("#btnDownload").click();

                        }
                        , error: function (message) {
                            $("#spanGlobalMessage").html(message.statusText);
                            showNotificationDialog();
                            $("#BinNumber").focus();
                        }
        });
    });

    $('#btnCancel').click(function () {
        $("#btnDownload").click();
    });

  

</script>
