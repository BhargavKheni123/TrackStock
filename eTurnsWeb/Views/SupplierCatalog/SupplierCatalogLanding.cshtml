@{
    ViewBag.Title = "SupplierCatalogLanding";
}
@section head{
    @*@if (false)
    {
        <script src="../../Scripts/jquery-1.9.0-vsdoc.js" type="text/javascript"></script>
    }*@
    <script type="text/javascript">
        jQuery(function () {
            $("#btnOpenPopup").click(function () {
                $('#divSupplierCatalogItems').data("data", '12').dialog('open');
            });

            $("#divSupplierCatalogItems").dialog({
                autoOpen: false,
                modal: true,
                draggable: true,
                resizable: true,
                width: '82%',
                height: 710,
                title: 'Select Item from BOM',
                open: function () {
                    
                    if ($.trim($("#divSupplierCatalogItems").html()) == "") {
                        $("#divSupplierCatalogItems").load('@Url.Action("LoadSupplierCatalogItems", "SupplierCatalog")?MatStagID=' + $(this).data("data"), function () {
                            $('#DivLoading').hide();
                        });
                    }
                    else {
                        if ($("#divSupplierCatalogItems").find("#ItemModel_filter").val() != "") {
                            $("#divSupplierCatalogItems").find("#clear_QLItemModel_filter").click();
                        }
                    }
                    $('#DivLoading').hide();
                },
                close: function () {

                }
            });

        });
    
    </script>
}
<div class="userListingWrapper">
    <h2>
        Supplier Catalog
    </h2>
    <div class="userListBlock">
        <input type="button" name="btnOpenPopup" id="btnOpenPopup" value="Open" />
        
    </div>
    <div id="divSupplierCatalogItems">
    </div>
</div>
